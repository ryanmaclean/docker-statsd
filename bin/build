#!/bin/sh

set -e

export DEBIAN_FRONTEND=noninteractive

apt-get update -q
apt-get install -y curl unzip nodejs npm

# Install statsd
cd /opt
curl -s -k -L https://github.com/etsy/statsd/archive/v0.7.1.zip > statsd.zip
unzip statsd.zip
ln -s statsd-0.7.1 statsd
rm statsd.zip

# Install some common backends.
cd /opt/statsd
npm config set registry http://registry.npmjs.org/
npm install statsd-librato-backend
npm install statsd-influxdb-backend
